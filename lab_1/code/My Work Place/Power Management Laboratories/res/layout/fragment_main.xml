<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.powermanagementlaboratory.MainActivity$PlaceholderFragment" >

    <Button
        android:id="@+id/lab1"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Low Performance Mode"
        android:textColor="#243CDC"
        android:textSize="30dp" />

    <Button
        android:id="@+id/lab2"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/lab1"
        android:layout_below="@+id/lab1"
        android:layout_marginTop="19dp"
        android:text="High Performance Mode"
        android:textColor="#243CDC"
        android:textSize="30dp" />

    <Button
        android:id="@+id/lab3"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/lab2"
        android:layout_below="@+id/lab2"
        android:layout_marginTop="24dp"
        android:text="Dynamic Frequency Scalling Mode"
        android:textColor="#243CDC"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/opSTATUS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lab3"
        android:layout_below="@+id/lab3"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="37dp"
        android:text="Operation Messages"
        android:textSize="30dp"
        android:textColor="#243CDC" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/lab3"
        android:layout_below="@+id/opSTATUS" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:gravity="bottom" >

            <TextView
                android:id="@+id/opMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
       			android:textColor="#330000" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/checkFrequency"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_alignRight="@+id/scrollView1"
        android:layout_alignTop="@+id/lab1"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/lab1"
        android:text="CHECK CPU FREQUENCY"
        android:textColor="#243CDC"
        android:textSize="20dp" />

    <Button
        android:id="@+id/checkCPU"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignBottom="@+id/lab3"
        android:layout_alignLeft="@+id/checkFrequency"
        android:text="CHECK CPU USAGE"
        android:textColor="#243CDC"
        android:textSize="20dp" />

</RelativeLayout>
