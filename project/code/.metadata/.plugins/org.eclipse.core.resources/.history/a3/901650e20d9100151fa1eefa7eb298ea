package compute;

import java.util.ArrayList;

import characters.Car;

/**
 * holds all variables related to the state of the car pannel. Modifying this
 * will affect the car panel.
 * 
 * @author element
 *
 */
public class CarPanelState {
	public Car main_car;

	public ArrayList<Character> obstacles;
	public ArrayList<Character> other_cars;

	public CarPanelState() {
		reset();
	}

	/**
	 * copy constructor
	 */
	public CarPanelState(CarPanelState state) {
		this.main_car = new Car(state.main_car);
		
		this.obstacles = new ArrayList<Character>(obstacles);
		this.other_cars = new ArrayList<Character>(other_cars);
	}

	private void reset() {
		main_car = new Car();
		obstacles = new ArrayList<Character>();
		other_cars = new ArrayList<Character>();
	}
}
