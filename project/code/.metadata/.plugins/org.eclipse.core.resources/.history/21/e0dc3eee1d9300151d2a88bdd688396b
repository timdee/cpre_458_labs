package compute;

/**
 * controls the back end processing.
 * 
 * This includes: 1) scheduler 2) task queues
 * 
 */
public class ProcessingController implements Runnable {

	@Override
	public void run() {
		while (true) {
			try {
				// update every 10 ms (100 fps)
				Thread.sleep(10);
			} catch (Exception e) {
				e.printStackTrace();
			}

			update_processing_components();
		}
	}
	
	/**
	 * calls methods to update each of the processing components 1) scheduler
	 * task queue 2) scheduler 4) processors task queues 5) processors
	 */
	private void update_processing_components(){
		
	}
}
